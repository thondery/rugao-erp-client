{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel-eslint/plugin",
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true,
    "es6": true,
    "node": true,
    "experimentaldecorators": true
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"],
    "object-shorthand"     : [2, "always"]
  }
}